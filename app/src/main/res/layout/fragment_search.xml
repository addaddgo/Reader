<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mainFragment.SearchFragment">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/search"
            android:autofillHints="@string/search"
            android:id="@+id/search_frag_edit"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/search"
            android:id="@+id/search_frag_search_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="8"
        android:id="@+id/search_log_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:gravity="center"
        android:id="@+id/search_log_clear"
        android:text="@string/clear_search_log"
        android:textColor="@color/colorDimDark"
        android:textSize="@dimen/text_size_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>