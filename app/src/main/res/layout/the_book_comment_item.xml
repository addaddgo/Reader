<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/the_book_comment_author_portrait"
        android:layout_width="@dimen/community_comment_author_portrait_size"
        android:layout_height="@dimen/community_comment_author_portrait_size"/>

    <TextView
        android:layout_marginStart="@dimen/community_comment_margin_portrait_text"
        android:text="@string/empty_text"
        app:layout_constraintStart_toEndOf="@+id/the_book_comment_author_portrait"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/the_book_comment_author_name"
        android:textSize="@dimen/text_size_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/community_comment_margin_name_topic"
        android:layout_marginStart="@dimen/community_comment_margin_portrait_text"
        android:text="@string/empty_text"
        app:layout_constraintTop_toBottomOf="@id/the_book_comment_author_name"
        app:layout_constraintStart_toEndOf="@+id/the_book_comment_author_portrait"
        android:id="@+id/the_book_comment_topic"
        android:textSize="@dimen/text_size_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>