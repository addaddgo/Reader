<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/fin_base_rank_item"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="@dimen/find_icon_margin"
        android:id="@+id/find_base_rank_item_image"
        android:layout_width="@dimen/find_icon_size_"
        android:layout_height="@dimen/find_icon_size_" />

    <TextView
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_big"
        android:id="@+id/find_base_rank_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>