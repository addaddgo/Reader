<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorYellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_weight="1"
        android:id="@+id/reading_view_tittle"
        android:textSize="@dimen/text_size_big"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <com.example.hp.readingyouself.readActivity.PageView
        app:tagColor="@color/colorGold"
        app:searchColor="@color/colorCyan"
        android:textIsSelectable="true"
        android:layout_weight="10"
        android:id="@+id/reading_view_page"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/Theme.AppCompat"
            android:id="@+id/reading_view_next_chapter_button"
            android:textSize="@dimen/text_size_big"
            android:text="@string/next_chapter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            style="@style/Theme.AppCompat"
            android:id="@+id/reading_view_pre_chapter_button"
            android:textSize="@dimen/text_size_big"
            android:text="@string/pre_chapter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
